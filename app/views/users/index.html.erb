
<div class="container">
 <div class="row">

  <div class="col-md-3">

<div>
 <p><%= @user.name %></p>
 <p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'60x60',format: 'jpeg' %></p>
 <p>aa<%= @user.introduction %></p>
 <p><%= link_to "編集", edit_user_path(@user),class:"btn btn-outline-secondary btn-block fas fa-user-cog" %></p>
</div>

  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h4>New book</h4>
<%= form_with model: @book, local:true do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
   <div class="form-group">
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
  </div>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
 <h1>index</h1>

 <% @users.each do |user2| %>

  <div class="card-body">
   <p>ユーザーネーム :<%= user2.name %></p>
    <div class="row">
       <div class="">
        <%= attachment_image_tag user2, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60', format: 'jpeg'  %>

        <p><%= link_to "Show", user_path(user2.id) %></p>
       </div>
  </div>
<% end %>

  </div>

 </div>
</div>