
<div class="container">
  <div class="row">

<div class="col-md-3">
  <div>
  <p><%= @book.user.name %></p>
  <p><%= attachment_image_tag  @book.user, :profile_image, :fill, 300, 300, format: 'jpeg' %></p>
  <p> <%= @book.user.introduction %></p>
  <p><%= link_to "プロフィール編集", edit_user_path(@book.user.id),class:"btn btn-outline-secondary btn-block fas fa-user-cog" %></p>
</div>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h1>New book</h1>
<%= form_with model: @booker, local:true do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <div class="form-group">
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
  </div>
<% end %>

</div>


    <div class="col-md-8 offset-md-1">
<h1>Book detail</h1>

 <%= attachment_image_tag  @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>

          <p>ショップ名：<%= @book.title %></p>
        <p>説明：<%= @book.body %></p>
        <p><%= link_to "#{@book.user.name} name", user_path(@book.user), class:"text-dark" %></p>
    </div>
 </div>
<div>

<% if @book.user.id == current_user.id %>
   <p class="btn btn-sm btn-success edit_book"> <%= link_to "Edit", edit_book_path(@book)%></p>

 <p class="btn btn-sm btn-danger destroy_book"><%= link_to "Destroy", book_path, method: :delete %></p>
<% else %>
  なし
<% end %>


    </div>

  </div>
</div>
